[
  {
    "name": "notification-container",
    "image": "339713009115.dkr.ecr.us-east-1.amazonaws.com/notification-service:latest",
    "cpu": 256,
    "memory": 512,
    "portMappings": [
      {
        "containerPort": 8080,
        "hostPort": 8080,
        "protocol": "tcp"
      }
    ],
    "essential": true,
    "environment": [
      {
        "name": "TWILIO_ACCOUNT_SID",
        "value": "${TWILIO_ACCOUNT_SID}"
      },
      {
        "name": "TWILIO_AUTH_TOKEN",
        "value": "${TWILIO_AUTH_TOKEN}"
      }
    ],
    "healthCheck": {
      "command": [
        "CMD-SHELL",
        "curl -f http://localhost:8080/health || exit 1"
      ],
      "interval": 30,
      "timeout": 5,
      "retries": 3,
      "startPeriod": 60
    },
    "logConfiguration": {
      "logDriver": "awslogs",
      "options": {
        "awslogs-group": "/ecs/notification-service",
        "awslogs-region": "us-east-1",
        "awslogs-stream-prefix": "ecs"
      }
    }
  }
]
